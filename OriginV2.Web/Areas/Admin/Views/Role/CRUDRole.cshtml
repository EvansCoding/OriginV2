@model OriginV2.Web.ViewModels.RoleViewModel
@{
    ViewBag.Title = "CategoryView";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style type="text/css">
    .modal-dialog {
        width: 100%;
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Cập nhật quyền</h4>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @using (@Html.BeginForm("AddOrUpdate", "Role", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tên quyền<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên quyền", required = "required" } })
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group text-right mb-0">
                        <button class="btn btn-primary" type="submit">Lưu</button>
                        <button type="button" onclick="window.location.href = '@Url.Action("RoleView","Role")'" class="btn btn-secondary">Đóng</button>
                    </div>
                }
            </div>
        </div>

    </div>
</div>