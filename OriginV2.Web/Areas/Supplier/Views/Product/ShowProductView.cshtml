@model  OriginV2.Web.ViewModels.ProductViewModel

<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-group" style="text-align:center">
                        <h4><b>TRUY XUẤT NGUỒN GỐC</b></h4>
                    </div>

                    <div class="form-row">
                        <div class="col" style="text-align: center">
                            <img src="@Model.ImageOne" width="auto" height="200px" />
                        </div>
                        <div class="col" style="text-align: center">
                            <img src="@Model.ImageOne" width="auto" height="200px" />
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <h4>Thông tin sản xuất </h4>
                        <p class="mt-25">
                            <b>Tên sản phẩm:</b>
                            @Model.Name
                        </p>
                        <p class="mt-25">
                            <b>Chủ sản xuất:</b>
                            @Model.NameSupplier
                        </p>
                        <p class="mt-25">
                            <b>Địa chỉ sản xuất:</b>
                            @Model.AddressSupplier
                        </p>
                        <p class="mt-25">
                            <b>Ngày sản xuất:</b>
                            @Model.Harvest.ToShortDateString()
                        </p>
                    </div>
                    <hr />
                    <div class="form-group">
                        <h4>Thông tin sản phẩm </h4>
                        <p class="mt-25">
                            <b>Công nghệ sản xuất:</b>
                            @Model.Technology
                        </p>
                        <p class="mt-25">
                            <b>Nguồn gốc:</b>
                            @Model.Origin
                        </p>
                        <p class="mt-25">
                            <b>Đặc điểm:</b>
                            @Model.Attribute
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


