@model  OriginV2.Web.ViewModels.ProductViewViewModel

@{
    ViewBag.Title = "CRUDSupplier";
    Layout = "~/Areas/Supplier/Views/Shared/_SupplierLayout.cshtml";
}


<style type="text/css">
    .modal-dialog {
        width: 100%;
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Cập nhật thông tin nhà sản xuất</h4>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @using (@Html.BeginForm("AddOrUpdate", "ProductView", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Tên <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new {placeholder = "Nhập tên sản phẩm", @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Hình ảnh 1</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.ImageOne, new { htmlAttributes = new { @id = "imageOne", @class = "form-control path_file", placeholder = "Hãy chọn hình ảnh thứ nhất", required = "required" } })
                            @Html.ValidationMessageFor(x => x.ImageOne, "", new { @class = "text-danger" })
                            <div class="input-group-append btn-upfle">
                                <a data-toggle="modal" data-target="#myModalOne" class="btn btn-dark " style="color: white">
                                    <i class="fa fa-upload" style="color: white"></i>
                                    Browse
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Hình ảnh 2</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.ImageTwo, new { htmlAttributes = new { @id = "imageTwo", @class = "form-control path_file", placeholder = "Hãy chọn hình ảnh thứ 2", required = "required" } })
                            @Html.ValidationMessageFor(x => x.ImageTwo, "", new { @class = "text-danger" })
                            <div class="input-group-append btn-upfle">
                                <a data-toggle="modal" data-target="#myModalTwo" class="btn btn-dark " style="color: white">
                                    <i class="fa fa-upload" style="color: white"></i>
                                    Browse
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Nguồn gốc <span class="text-danger">*</span></label>
                        @Html.TextAreaFor(model => model.Origin, new { placeholder = "Hãy nhập nguồn gốc", @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(x => x.Origin, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Đặc tính <span class="text-danger">*</span></label>
                        @Html.TextAreaFor(model => model.Attribute, new { placeholder = "Hãy nhập đặc tính", @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(x => x.Attribute, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Công nghệ sản xuất <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Technology, new { htmlAttributes = new { placeholder = "Hãy nhập công nghệ sản xuất", @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(x => x.Technology, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Ngày thu hoạch <span class="text-danger">*</span></label>
                        <div>
                            <div class="input-group">
                                @Html.EditorFor(model => model.Harvest, new { htmlAttributes = new { @class = "form-control", placeholder = "mm/dd/yyyy", required = "required", data_provide = "datepicker", data_date_autoclose = "true" } })
                                @Html.ValidationMessageFor(x => x.Technology, "", new { @class = "text-danger" })
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                                </div>
                            </div>
                            <!-- input-group -->
                        </div>
                    </div>
                    <div class="form-group text-right mb-0">
                        <button class="btn btn-primary" type="submit">Lưu</button>
                        <button type="button" onclick="window.location.href = '@Url.Action("ProductView","ProductView")'" class="btn btn-secondary">Đóng</button>
                    </div>
                }
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="myModalOne">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Quản lý tệp tin</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

            </div>
            <div class="modal-body">
                <iframe src="/filemanager/dialog.php?type=1&fldr=&field_id=imageOne" frameborder="0" style="overflow:hidden; min-height:600px; height:100%;width:100%" height="100%" width="100%"></iframe>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModalTwo">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Quản lý tệp tin</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

            </div>
            <div class="modal-body">
                <iframe src="/filemanager/dialog.php?type=1&fldr=&field_id=imageTwo" frameborder="0" style="overflow:hidden; min-height:600px; height:100%;width:100%" height="100%" width="100%"></iframe>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/Admin/assets/libs/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
}

